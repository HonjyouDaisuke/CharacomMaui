<views:Popup
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:views="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
  xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
  xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
  xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
  x:Class="CharacomMaui.Presentation.Dialogs.CreateProjectDialog"
  BackgroundColor="Transparent">

  <Border BackgroundColor="Black"
          StrokeThickness="0"
          Margin="0"
          Padding="0">
    <VerticalStackLayout Padding="0"
                         WidthRequest="600"
                         Spacing="10"
                         Margin="0">


      <!-- プロジェクト情報 -->
      <Border BackgroundColor="#222222"
              StrokeThickness="0"
              Padding="5">
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="10"/>
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="10">

          <material:TextField x:Name="ProjectNameEntry"
                              Title="プロジェクト名"
                              AllowClear="True">
            <validation:RequiredValidation/>
          </material:TextField>
          <material:TextField x:Name="ProjectDescriptionEditor"
                              Title="プロジェクトの説明"
                              AllowClear="True">
            <validation:RequiredValidation/>
          </material:TextField>
        </VerticalStackLayout>
      </Border>

      <!-- Top Folder -->
      <Border BackgroundColor="#222222"
              StrokeThickness="0"
              Padding="15">
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="10"/>
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="10">
          <Label Text="プロジェクトフォルダー"
                 TextColor="White"/>
          <uranium:Dropdown x:Name="TopFolderDropdown"
                            WidthRequest="300"
                            TextColor="White"
                            Placeholder="選択してください"/>
          <Label Text="個別画像フォルダー"
                 TextColor="White"/>
          <uranium:Dropdown x:Name="CharaFolderDropdown"
                            WidthRequest="300"
                            TextColor="White"
                            Placeholder="選択してください"/>
        </VerticalStackLayout>
      </Border>

      <BoxView HeightRequest="1"
               BackgroundColor="#444"
               HorizontalOptions="Fill"/>

      <!-- ボタン -->
      <HorizontalStackLayout Spacing="10"
                             HorizontalOptions="Center">
        <Button Text="OK"
                Clicked="OnOkClicked"/>
        <Button Text="キャンセル"
                Clicked="OnCancelClicked"/>
      </HorizontalStackLayout>

    </VerticalStackLayout>
  </Border>
</views:Popup>
