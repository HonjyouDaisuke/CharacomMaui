<?xml version="1.0" encoding="utf-8" ?>
<views:Popup
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:views="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
  x:Class="CharacomMaui.Presentation.Dialogs.CreateProjectDialog">

  <VerticalStackLayout Padding="20"
      Spacing="15">
    <Label Text="フォルダを選択"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>

    <Picker x:Name="FolderPicker"
            ItemsSource="{Binding Folders}"
            ItemDisplayBinding="{Binding Name}"
            SelectedItem="{Binding SelectedFolder, Mode=TwoWay}"/>

    <HorizontalStackLayout Spacing="10"
        HorizontalOptions="Center">
      <Button Text="OK"
          Clicked="OnOkClicked"/>
      <Button Text="キャンセル"
          Clicked="OnCancelClicked"/>
    </HorizontalStackLayout>
  </VerticalStackLayout>
</views:Popup>
