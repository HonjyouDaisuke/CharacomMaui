<ContentView
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="CharacomMaui.Presentation.Components.SnackBarView"
  IsVisible="False"
  Opacity="0"
  VerticalOptions="End"
  HorizontalOptions="Fill"
  Margin="16">

  <Border x:Name="Root"
          BackgroundColor="Gray"
          StrokeShape="RoundRectangle 12"
          Padding="14">
    <Grid ColumnDefinitions="Auto, *"
          ColumnSpacing="12"
          VerticalOptions="Center">
      <Label
        Grid.Column="0"
        x:Name="Icon"
        FontFamily="MaterialOutlineIcons"
        FontSize="24"
        TextColor="White"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        WidthRequest="30"/>

      <Label
        Grid.Column="1"
        x:Name="Message"
        FontSize="18"
        TextColor="White"
        LineBreakMode="WordWrap"
        VerticalOptions="Center"/>
    </Grid>
  </Border>
</ContentView>
