<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="CharacomMaui.Presentation.Components.ImageCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="This">

    <Border
        Margin="4"
        Padding="8"
        BackgroundColor="{AppThemeBinding Light=#FFFFFF,
                                          Dark=#1E1E1E}"
        Shadow="3"
        Stroke="{DynamicResource Gray200}"
        StrokeShape="RoundRectangle 6"
        StrokeThickness="1">

        <VerticalStackLayout HorizontalOptions="Center" Spacing="6">
            <Label FontAttributes="Bold" Text="{Binding Name, Source={x:Reference This}}" />
            <Label Text="  " />
            <Label Opacity="0.7" Text="{Binding Type, Source={x:Reference This}}" />
            <Label
                FontSize="12"
                HorizontalOptions="End"
                Opacity="0.5"
                Text="{Binding Id, Source={x:Reference This}}" />
            <Image
                Aspect="AspectFill"
                HeightRequest="50"
                Source="{Binding Image, Source={x:Reference This}}"
                WidthRequest="50" />
        </VerticalStackLayout>
    </Border>
</ContentView>