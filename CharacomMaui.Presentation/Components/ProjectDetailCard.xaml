<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="CharacomMaui.Presentation.Components.ProjectDetailCard"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <Border
    x:Name="BackGraoundBorder"
    Margin="8"
    Padding="16"
    StrokeShape="RoundRectangle 12"
    Shadow="5"
    BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1A1A1A}"
    Stroke="{AppThemeBinding Light=#E5E5E5, Dark=#333333}"
    StrokeThickness="1">

    <VerticalStackLayout Spacing="12">

      <!-- プロジェクト名 -->
      <VerticalStackLayout Spacing="4">
        <Label Text="プロジェクト名"
               FontSize="13"
               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"/>

        <Label Text="サンプルプロジェクトX"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light=#222, Dark=#FFF}"/>
      </VerticalStackLayout>


      <!-- 説明 -->
      <VerticalStackLayout Spacing="4">
        <Label Text="説明"
               FontSize="13"
               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"/>

        <Label Text="プロジェクトの説明になります。少し長い文章が入ります。"
               FontSize="14"
               TextColor="{AppThemeBinding Light=#333, Dark=#DDD}"
               LineBreakMode="WordWrap"/>
      </VerticalStackLayout>


      <!-- 日付情報 -->
      <Grid ColumnDefinitions="*,Auto"
          RowDefinitions="Auto,Auto"
          RowSpacing="6">

        <Label Grid.Row="0"
            Grid.Column="0"
               Text="作成日"
               FontSize="13"
               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"/>

        <Label Grid.Row="0"
            Grid.Column="1"
               Text="2025年11月22日"
               FontSize="14"
               TextColor="{AppThemeBinding Light=#333, Dark=#DDD}"/>

        <Label Grid.Row="1"
            Grid.Column="0"
               Text="最終更新日"
               FontSize="13"
               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"/>

        <Label Grid.Row="1"
            Grid.Column="1"
               Text="2025.11.22"
               FontSize="14"
               TextColor="{AppThemeBinding Light=#333, Dark=#DDD}"/>
      </Grid>

    </VerticalStackLayout>
  </Border>
</ContentView>
