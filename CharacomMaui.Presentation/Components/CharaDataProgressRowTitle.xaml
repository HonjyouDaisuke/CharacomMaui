<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="CharacomMaui.Presentation.Components.CharaDataProgressRowTitle"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:models="clr-namespace:CharacomMaui.Presentation.Models"
  x:Name="This">

  <Grid RowDefinitions="*, Auto">
    <Grid Margin="20, 5,20,5"
          Padding="0"
          Grid.Row="0"
          x:Name="BackgroundBorder"
          ColumnSpacing="10"
          BackgroundColor="{AppThemeBinding Light=#FFFFFF,
                                          Dark=#1E1E1E}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="10*"/>
      </Grid.ColumnDefinitions>

      <Label Grid.Column="0"
             HorizontalTextAlignment="Center"
             Text="文字種"/>
      <Label Grid.Column="1"
             HorizontalTextAlignment="Center"
             Text="資料名"/>
      <Label Grid.Column="2"
             HorizontalTextAlignment="Center"
             Text="文字数"/>
      <Label Grid.Column="3"
             HorizontalTextAlignment="Center"
             Text="選択数"/>
      <Label Grid.Column="4"
             HorizontalTextAlignment="Center"
             Text="進捗状況"/>
    </Grid>
    <BoxView Grid.Row="1"
             Margin="20,0,20,0"
             HeightRequest="1"
             BackgroundColor="{DynamicResource Gray200}"
             HorizontalOptions="Fill"/>
  </Grid>
</ContentView>