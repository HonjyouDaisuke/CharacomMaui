<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CharacomMaui.Presentation.Pages.BoxLoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BoxLoginPage">
    <VerticalStackLayout>
        <Label 
            Text="Boxにログイン"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Button 
            x:Name="LoginButton"
            Text="ログインする"
            Clicked="OnLoginClicked"
            BackgroundColor="#0061D5"
            TextColor="White"
            CornerRadius="8"
            HeightRequest="48" />

        <Label 
            x:Name="StatusLabel"
            Text="ログイン状態: 未ログイン"
            FontSize="14"
            TextColor="Gray"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>