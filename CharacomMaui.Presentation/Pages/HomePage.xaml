<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="CharacomMaui.Presentation.Pages.HomePage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:components="clr-namespace:CharacomMaui.Presentation.Components">
  <Shell.TitleView>
    <Grid Padding="0,0,10,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <Label Text="ホームのページでゴンスここを編集してタイトル作るよ"
             VerticalOptions="Center"
             FontSize="24"/>
    </Grid>
  </Shell.TitleView>
  <ScrollView>
    <VerticalStackLayout Padding="30,0"
                         Spacing="25">
      <Image
        Aspect="AspectFit"
        HeightRequest="185"
        SemanticProperties.Description="dot net bot in a hovercraft number nine"
        Source="dotnet_bot.png"/>

      <Label
        SemanticProperties.HeadingLevel="Level1"
        Style="{StaticResource Headline}"
        Text="Hello, World!"/>

      <Label
        SemanticProperties.Description="Welcome to dot net Multi platform App U I"
        SemanticProperties.HeadingLevel="Level2"
        Style="{StaticResource SubHeadline}"
        Text="Welcome to &#10;.NET Multi-platform App UI"/>

      <Button
        x:Name="CounterBtn"
        Clicked="OnCounterClicked"
        HorizontalOptions="Fill"
        SemanticProperties.Hint="Counts the number of times you click"
        Text="Click me"/>
      <Button Clicked="OnConfigClicked"
              Text="Box ClientId取得"/>
      <Button
        x:Name="PlatformBtn"
        Clicked="OnPlatformClicked"
        HorizontalOptions="Fill"
        SemanticProperties.Hint="デバイスのプラットフォームを取得します"
        Text="Platforms取得"/>
      <Button
        x:Name="DialogBtn"
        Clicked="OnStartDownloadClicked"
        HorizontalOptions="Fill"
        SemanticProperties.Hint="Downlaod ダイアログ表示"
        Text="ダウンロード"/>

      <Label FontSize="24"
             Text="Boxにログイン"/>

      <Button Clicked="OnLoginClicked"
              Text="ログイン"/>

      <Label x:Name="StatusLabel"
             Text=""/>
      <Button
        x:Name="ListFilesBtn"
        Clicked="OnListFilesClicked"
        Text="ルートフォルダ一覧を取得"/>
      <HorizontalStackLayout
        Margin="10"
        Spacing="10">
        <Button
          x:Name="SuccessToastBtn"
          Clicked="OnSuccessToastClicked"
          Text="[成功]トースト通知を表示"/>
        <Button
          x:Name="ErrorToastBtn"
          Clicked="OnErrorToastClicked"
          Text="[エラー]トースト通知を表示"/>
        <Button
          x:Name="WarningToastBtn"
          Clicked="OnWarningToastClicked"
          Text="[警告]トースト通知を表示"/>
        <Button
          x:Name="InfoToastBtn"
          Clicked="OnInfoToastClicked"
          Text="[情報]トースト通知を表示"/>
      </HorizontalStackLayout>

      <CollectionView
        x:Name="FilesCollection"
        HeightRequest="400"
        ItemsLayout="VerticalGrid, 6"
        ItemsSource="{Binding Files2}"
        SelectionMode="None">
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <components:ImageCard
              Name="{Binding Name}"
              Id="{Binding Id}"
              Image="{Binding Image}"
              Type="{Binding Type}"/>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>

    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
